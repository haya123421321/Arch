sudo pacman -Syyu --noconfirm
sudo pacman -S base-devel binutils linux-headers tff-droid zsh gcc git make zsh-completions zsh-syntax-highlighting vim --noconfirm

fc-cache
echo 'downloading yay and Powerlevel10k theme'
cd /opt
sudo git clone https://aur.archlinux.org/yay-git.git
sudo chown -R $(whoami):$(whoami) ./yay-git
cd yay-git
makepkg -si
yay -S --noconfirm zsh-theme-powerlevel10k-git sublime-text-4

cd ~
git clone https://github.com/haya123421321/Arch
sudo cat Arch/zshrc > ~/.zshrc
sudo cat Arch/p10k.zsh > ~/.p10k.zsh
echo 'change shell to zsh'
chsh
