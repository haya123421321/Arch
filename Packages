sudo pacman -Syyu
sudo pacman -S base-devel binutils zsh gcc git make zsh-completions zsh-syntax-highlighting vim

cd /opt
sudo git clone https://aur.archlinux.org/yay-git.git
sudo chown -R $(whoami):$(whoami) ./yay-git
cd yay-git
makepkg -si
yay -S --noconfirm zsh-theme-powerlevel10k-git

cd ~
git clone https://github.com/haya123421321/Arch
sudo cat Arch/zshrc > ~/.zshrc
sudo cat Arch/p10k.zsh > ~/.p10k.zsh
