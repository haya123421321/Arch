read -p "Type your password for sudo: " password
User=$(whoami)

echo "$password" | sudo -S sed -i "/\[multilib\]/,/Include/"'s/^#//' /etc/pacman.conf
echo "$password" | sudo -S pacman -Syyu --noconfirm
echo "$password" | sudo -S pacman -S base-devel fontconfig ttf-droid steam discord bitwarden dolphin binutils linux-headers zsh gcc git make zsh-completions zsh-syntax-highlighting vim --noconfirm

fc-cache
cd /opt
